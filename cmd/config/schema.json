{
  "$id": "https://raw.githubusercontent.com/aklinker1/project-doctor/main/api/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "additionalProperties": false,
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "title": "InstalledTool",
            "type": "object",
            "additionalProperties": false,
            "required": ["executable", "installUrls"],
            "properties": {
              "type": {
                "const": "tool"
              },
              "name": {
                "type": "string"
              },
              "executable": {
                "type": "string"
              },
              "getVersion": {
                "type": "string"
              },
              "versionRegex": {
                "type": "string"
              },
              "installUrls": {
                "type": "object",
                "additionalProperties": false,
                "required": ["default"],
                "properties": {
                  "default": {
                    "type": "string"
                  },
                  "unix": {
                    "type": "string"
                  },
                  "mac": {
                    "type": "string"
                  },
                  "windows": {
                    "type": "string"
                  }
                }
              },
              "installOptions": {
                "$comment": "A map of possible executables to their commands used to install the tool. If the key is on your path, it will be shown as an option to run",
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "changeVersions": {
                "$comment": "A map of possible executables to their commands used to change the current version that is installed. If the key is on your path, it will be shown as an option to run",
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "command": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          }
        }
      }
    }
  }
}
