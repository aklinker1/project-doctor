{
  "$id": "https://raw.githubusercontent.com/aklinker1/project-doctor/main/api/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "additionalProperties": false,
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "title": "BaseTool",
            "type": "object",
            "additionalProperties": false,
            "required": ["executable", "installUrls"],
            "properties": {
              "type": {
                "type": "null"
              },
              "name": {
                "type": "string"
              },
              "executable": {
                "type": "string"
              },
              "versionRegex": {
                "type": "string"
              },
              "installUrls": {
                "type": "object",
                "additionalProperties": false,
                "required": ["default"],
                "properties": {
                  "default": {
                    "type": "string"
                  },
                  "unix": {
                    "type": "string"
                  },
                  "mac": {
                    "type": "string"
                  },
                  "windows": {
                    "type": "string"
                  }
                }
              },
              "installOptions": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    }
  }
}
